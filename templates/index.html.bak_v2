                        data: legendData,
                        textStyle: { color: '#f1f5f9' }
                    },
                    grid: {
                        left: '8%',
                        right: '12%',
                        bottom: '15%',
                        top: '15%'
                    },
                    xAxis: {
                        type: 'category',
                        data: dates,
                        axisLine: { lineStyle: { color: '#334155' } },
                        axisLabel: { color: '#94a3b8' }
                    },
                    yAxis: {
