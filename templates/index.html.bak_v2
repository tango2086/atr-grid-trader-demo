                            lineStyle: { color: '#ef4444', type: 'dashed', width: 1 },
                            label: {
                                show: true,
                                formatter: `Âçñ ¬•${price.toFixed(3)}`,
                                position: 'end',
                                color: '#ef4444'
                            }
                        });
                    }
                });

                // Ê∑ªÂä†ÊåÅ‰ªìÈÖçÂØπÁöÑÁõÆÊ†á‰ª∑
                const pairsArr = Array.isArray(activePairs) ? activePairs : [];
                pairsArr.forEach(pair => {
                    const targetPrice = Number(pair.target_sell_price);
                    const buyPrice = Number(pair.buy_price);

                    if (!isNaN(targetPrice)) {
                        markLineData.push({
                            yAxis: targetPrice,
                            name: `ÁõÆÊ†áÂçñÂá∫ ¬•${targetPrice.toFixed(3)}`,
                            lineStyle: { color: '#f59e0b', type: 'dotted', width: 2 },
                            label: {
                                show: true,
                                formatter: `ÁõÆÊ†á ¬•${targetPrice.toFixed(3)}`,
                                position: 'start',
                                color: '#f59e0b'
                            }
                        });
                    }

                    if (!isNaN(buyPrice)) {
                        // ÊåÅ‰ªìÊàêÊú¨Á∫ø
                        markLineData.push({
                            yAxis: buyPrice,
                            name: `ÊàêÊú¨ ¬•${buyPrice.toFixed(3)}`,
                            lineStyle: { color: '#6366f1', type: 'solid', width: 1 },
                            label: {
                                show: true,
                                formatter: `ÊàêÊú¨ ¬•${buyPrice.toFixed(3)}`,
                                position: 'start',
                                color: '#6366f1'
                            }
                        });
                    }
                });

                // ÊûÑÂª∫ÂõæË°®ÈÖçÁΩÆ
                const legendData = ['KÁ∫ø', 'MA5', 'MA20'];
                if (markLineData.length > 0) {
                    legendData.push('ÁΩëÊ†ºÁÇπ‰Ωç');
                }

                const option = {
                    backgroundColor: 'transparent',
                    tooltip: {
                        trigger: 'axis',
                        formatter: function (params) {
                            const data = params[0];
                            if (!data || !data.value) return '';
                            return `Êó•Êúü: ${data.name}<br/>ÂºÄÁõò: ${data.value[1]}<br/>Êî∂Áõò: ${data.value[2]}<br/>ÊúÄ‰Ωé: ${data.value[3]}<br/>ÊúÄÈ´ò: ${data.value[4]}`;
                        }
