    <script>
        let chartInstance = null;
        let currentData = {};

        // Tab Navigation
        document.querySelectorAll('.nav-tab').forEach(tab => {
            tab.addEventListener('click', function () {
                switchTab(this.dataset.tab);
            });
        });

        function switchTab(tabName) {
            // Update nav tabs
            document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
            document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');

            // Update content
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.getElementById(tabName).classList.add('active');

            // Load tab-specific data
            switch (tabName) {
                case 'dashboard':
                    loadDashboard();
                    break;
                case 'monitor':
                    loadETFMonitor();
                    break;
                case 'signals':
                    loadSignals();
                    loadSignalFilter();
                    break;
                case 'history':
                    loadTrades();
                    break;
                case 'settings':
                    loadSettings();
                    break;
            }
        }

        // Data Loading Functions
        async function loadDashboard() {
            try {
                const response = await fetch('/api/dashboard');
                const data = await response.json();

                updateDashboardMetrics(data);
                updateRecentSignals(data.signals?.recent || []);
                updateRecentTrades(data.trades?.recent || []);
            } catch (error) {
                console.error('Dashboard load error:', error);
            }
        }

        function updateDashboardMetrics(data) {
            const overview = data.overview || {};

            // Total Value
            document.getElementById('total-value').textContent =
                `¬•${(overview.total_value || 0).toLocaleString()}`;

            // Position Percentage
            document.getElementById('position-pct').textContent =
                `${(overview.position_pct || 0).toFixed(1)}%`;

            // Total Profit
            const totalProfit = overview.total_profit || 0;
            const profitElement = document.getElementById('total-profit');
            profitElement.textContent = `¬•${totalProfit.toLocaleString()}`;
            profitElement.className = `metric-value ${totalProfit >= 0 ? 'positive' : 'negative'}`;

            // Profit Percentage
            const profitPct = overview.profit_pct || 0;
            const profitPctElement = document.getElementById('profit-pct');
            profitPctElement.textContent = `${profitPct.toFixed(2)}%`;
            profitPctElement.className = profitPct >= 0 ? 'positive' : 'negative';

            // Day Profit
            const dayProfit = overview.day_profit || 0;
            const dayProfitElement = document.getElementById('day-profit');
            dayProfitElement.textContent = `¬•${dayProfit.toLocaleString()}`;
            dayProfitElement.className = `metric-value ${dayProfit >= 0 ? 'positive' : 'negative'}`;

            // Floating P&L
            const floatingPnl = overview.floating_pnl || 0;
            document.getElementById('floating-pnl').textContent =
                `¬•${floatingPnl.toLocaleString()}`;
            document.getElementById('floating-pnl').className =
                floatingPnl >= 0 ? 'positive' : 'negative';

            // Signals
            const signalsCount = data.signals?.total || 0;
            document.getElementById('signals-count').textContent = signalsCount;
            document.getElementById('signals-today').textContent =
                data.signals?.today || 0;

            // Update status
            document.getElementById('last-update').textContent =
                data.market_status?.last_update || '';

            // Update ETF preview in dashboard
            if (data.etf_list && data.etf_list.length > 0) {
                document.getElementById('etf-count').textContent = data.etf_list.length;

                // Show top 3 ETFs in preview
                const etfPreview = document.getElementById('etf-preview');
                const topETFs = data.etf_list.slice(0, 3);
                etfPreview.innerHTML = topETFs.map(etf => {
                    const bias = etf.bias || 0;
                    const statusColor = bias >= 0 ? 'var(--danger)' : 'var(--success)';
                    return `<div style="margin: 0.25rem 0;">
                        <strong>${etf.name || etf.code}</strong>
                        <span style="color: ${statusColor}; margin-left: 0.5rem;">${bias >= 0 ? '+' : ''}${bias.toFixed(1)}%</span>
                    </div>`;
                }).join('');

                // Update monitoring stats
                document.getElementById('monitoring-count').textContent = data.etf_list.length;
                document.getElementById('signals-count-alt').textContent = signalsCount;
                document.getElementById('last-update-alt').textContent =
                    new Date().toLocaleTimeString('zh-CN', { hour: '2-digit', minute: '2-digit' });
            }
        }

        function updateRecentSignals(signals) {
            const container = document.getElementById('recent-signals');

            if (signals.length === 0) {
                container.innerHTML = '<div style="text-align: center; color: var(--text-sub); padding: 2rem;">ÊöÇÊó†‰∫§Êòì‰ø°Âè∑</div>';
                return;
            }

            container.innerHTML = signals.map(signal => `
                <div class="signal-item">
                    <div class="signal-info">
                        <div class="signal-header">
                            <div>
                                <strong>${signal.name}</strong>
                                <span class="signal-badge badge-${signal.direction.toLowerCase()}">
                                    ${signal.direction}
                                </span>
                            </div>
                            <div class="signal-time">${signal.timestamp}</div>
                        </div>
                        <div style="font-size: 0.875rem; color: var(--text-sub); margin-top: 0.25rem;">
                            ÁõÆÊ†á‰ª∑: ¬•${signal.target_price.toFixed(3)} |
                            Áé∞‰ª∑: ¬•${signal.current_price.toFixed(3)} |
                            Êï∞Èáè: ${signal.amount || 0}ËÇ°
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function updateRecentTrades(trades) {
            const container = document.getElementById('recent-trades');
            const previewContainer = document.getElementById('recent-trades-preview');

            if (trades.length === 0) {
                container.innerHTML = '<div style="text-align: center; color: var(--text-sub); padding: 2rem;">ÊöÇÊó†‰∫§ÊòìËÆ∞ÂΩï</div>';
                previewContainer.innerHTML = '<div style="color: var(--text-sub); font-size: 0.875rem;">ÊöÇÊó†‰∫§ÊòìËÆ∞ÂΩï</div>';
                return;
            }

            // Full list in signals tab
            container.innerHTML = trades.map(trade => `
                <div class="signal-item">
                    <div class="signal-info">
                        <div class="signal-header">
                            <div>
                                <strong>${trade.name || trade.code}</strong>
                                <span class="signal-badge badge-${trade.direction.toLowerCase()}">
                                    ${trade.direction}
                                </span>
                            </div>
                            <div class="signal-time">${trade.timestamp}</div>
                        </div>
                        <div style="font-size: 0.875rem; color: var(--text-sub); margin-top: 0.25rem;">
                            ¬•${trade.price.toFixed(3)} √ó ${trade.volume}ËÇ°
                            ${trade.realized_pnl ? ` | Áõà‰∫è: ¬•${trade.realized_pnl.toFixed(2)}` : ''}
                        </div>
                    </div>
                </div>
            `).join('');

            // Preview in dashboard (first 2 items)
            if (previewContainer) {
                const recentTrades = trades.slice(0, 2);
                previewContainer.innerHTML = recentTrades.map(trade => `
                    <div style="margin: 0.5rem 0; padding: 0.5rem; background: var(--bg-dark); border-radius: 4px;">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <span style="font-size: 0.875rem;">
                                <strong>${trade.name || trade.code}</strong>
                                <span class="signal-badge badge-${trade.direction.toLowerCase()}" style="font-size: 0.7rem; margin-left: 0.5rem;">
                                    ${trade.direction}
                                </span>
                            </span>
                            <span style="font-size: 0.75rem; color: var(--text-sub);">${trade.time || ''}</span>
                        </div>
                    </div>
                `).join('');
            }
        }

        // Âä†ËΩΩ‰∫§Êòì‰ø°Âè∑ÔºàÁî®‰∫é signals Ê†áÁ≠æÈ°µÔºâ
        async function loadSignals() {
            const container = document.getElementById('signals-list');
            const filter = document.getElementById('signals-filter')?.value || '';

            container.innerHTML = '<div style="text-align: center; padding: 2rem;"><div class="loading"></div></div>';

            try {
                let url = '/api/trading-signals?hours=168';
                if (filter) url += `&code=${filter}`;

                const response = await fetch(url);
                const data = await response.json();
                const signals = data.signals || [];

                if (signals.length === 0) {
                    container.innerHTML = '<div style="text-align: center; color: var(--text-sub); padding: 2rem;">ÊöÇÊó†‰∫§Êòì‰ø°Âè∑</div>';
                    return;
                }

                container.innerHTML = signals.map(signal => {
                    const targetPrice = Number(signal.target_price) || 0;
                    const currentPrice = Number(signal.current_price) || 0;
                    return `
                        <div class="signal-item">
                            <div class="signal-info">
                                <div class="signal-header">
                                    <div>
                                        <strong>${signal.name || signal.code}</strong>
                                        <span class="signal-badge badge-${(signal.direction || '').toLowerCase()}">${signal.direction || 'N/A'}</span>
                                    </div>
                                    <div class="signal-time">${signal.timestamp || ''}</div>
                                </div>
                                <div style="font-size: 0.875rem; color: var(--text-sub); margin-top: 0.25rem;">
                                    ÁõÆÊ†á‰ª∑: ¬•${targetPrice.toFixed(3)} | Áé∞‰ª∑: ¬•${currentPrice.toFixed(3)} | Êï∞Èáè: ${signal.amount || 0}ËÇ°
                                </div>
                            </div>
                        </div>`;
                }).join('');
            } catch (error) {
                console.error('Load signals error:', error);
                container.innerHTML = '<div style="text-align: center; color: var(--danger); padding: 2rem;">Âä†ËΩΩÂ§±Ë¥•</div>';
            }
        }

        // Âä†ËΩΩ‰ø°Âè∑ËøáÊª§Âô®ÔºàETF ‰∏ãÊãâÊ°ÜÔºâ
        function loadSignalFilter() {
            const select = document.getElementById('signals-filter');
            if (!select) return;

            // ‰øùÁïôÁ¨¨‰∏Ä‰∏™"ÂÖ®ÈÉ®"ÈÄâÈ°π
            const defaultOption = '<option value="">ÂÖ®ÈÉ®ETF</option>';
            const etfOptions = Object.entries({
                'sh510050': '50ETF',
                'sh510300': '300ETF',
                'sh510500': '500ETF',
                'sh512100': '1000ETF',
                'sh588000': 'ÁßëÂàõ50',
                'sh588080': 'ÁßëÂàõËäØÁâá'
            }).map(([code, name]) => `<option value="${code}">${name}</option>`).join('');

            select.innerHTML = defaultOption + etfOptions;
        }

        // Âä†ËΩΩ‰∫§ÊòìÂéÜÂè≤ÔºàÁî®‰∫é history Ê†áÁ≠æÈ°µÔºâ
        async function loadTrades() {
            const container = document.getElementById('trades-list');
            container.innerHTML = '<div style="text-align: center; padding: 2rem;"><div class="loading"></div></div>';

            try {
                const response = await fetch('/api/trades?hours=168&limit=50');
                const data = await response.json();
                const trades = data.trades || [];

                if (trades.length === 0) {
                    container.innerHTML = '<div style="text-align: center; color: var(--text-sub); padding: 2rem;">ÊöÇÊó†‰∫§ÊòìËÆ∞ÂΩï</div>';
                    return;
                }

                container.innerHTML = trades.map(trade => {
                    const price = Number(trade.price) || 0;
                    const volume = Number(trade.volume) || 0;
                    return `
                        <div class="signal-item">
                            <div class="signal-info">
                                <div class="signal-header">
                                    <div>
                                        <strong>${trade.name || trade.code}</strong>
                                        <span class="signal-badge badge-${(trade.direction || '').toLowerCase()}">${trade.direction || 'N/A'}</span>
                                    </div>
                                    <div class="signal-time">${trade.time || ''}</div>
                                </div>
                                <div style="font-size: 0.875rem; color: var(--text-sub); margin-top: 0.25rem;">
                                    ¬•${price.toFixed(3)} √ó ${volume}ËÇ°
                                </div>
                            </div>
                        </div>`;
                }).join('');
            } catch (error) {
                console.error('Load trades error:', error);
                container.innerHTML = '<div style="text-align: center; color: var(--danger); padding: 2rem;">Âä†ËΩΩÂ§±Ë¥•</div>';
            }
        }

        async function loadETFMonitor() {
            try {
                const response = await fetch('/api/status');
                const data = await response.json();

                displayETFList(data.etf_list || []);
            } catch (error) {
                console.error('ETF monitor load error:', error);
            }
        }

        // Refresh data
        async function refreshData() {
            try {
                const btn = event.target;
                btn.textContent = 'Âà∑Êñ∞‰∏≠...';
                btn.disabled = true;

                await loadETFMonitor();

                btn.textContent = 'Âà∑Êñ∞Êï∞ÊçÆ';
                btn.disabled = false;
            } catch (error) {
                console.error('Refresh error:', error);
                event.target.textContent = 'Âà∑Êñ∞Êï∞ÊçÆ';
                event.target.disabled = false;
