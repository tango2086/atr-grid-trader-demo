            justify-content: space-between;
            align-items: center;
            padding: 0.25rem 0.5rem;
            background: var(--bg-card);
            border-radius: 4px;
            font-size: 0.75rem;
        }

        .order-preview-item.buy {
            border-left: 2px solid var(--success);
        }

        .order-preview-item.sell {
            border-left: 2px solid var(--danger);
        }

        .order-direction {
            font-weight: 500;
        }

        .order-preview-item.buy .order-direction {
            color: var(--success);
        }

        .order-preview-item.sell .order-direction {
