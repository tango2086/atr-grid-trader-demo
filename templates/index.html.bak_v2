                        `;
                    }).join('');
                }

                // ËÆæÁΩÆÈªòËÆ§‰∫§Êòì‰ª∑Ê†º
                document.getElementById('trade-price').value = etf.price?.toFixed(3) || '';
                document.getElementById('trade-volume').value = 100;
                updateTradeAmount();

            } catch (error) {
                console.error('Load ETF details error:', error);
                showToast('Âä†ËΩΩETFËØ¶ÊÉÖÂ§±Ë¥•', 'error');
            }
        }

        function closeDetailModal() {
            document.getElementById('etf-detail-modal').classList.remove('show');
            currentDetailCode = null;
        }

        function fillTradeForm(direction, price, volume) {
            document.getElementById('trade-direction').value = direction;
            document.getElementById('trade-price').value = price.toFixed(3);
            document.getElementById('trade-volume').value = volume;
            updateTradeAmount();
        }

        function updateTradeAmount() {
            const price = parseFloat(document.getElementById('trade-price').value) || 0;
            const volume = parseInt(document.getElementById('trade-volume').value) || 0;
            const amount = price * volume;
            document.getElementById('trade-amount').value = amount > 0 ? `¬•${amount.toFixed(2)}` : '';
        }

        // ÁõëÂê¨‰ª∑Ê†ºÂíåÊï∞ÈáèÂèòÂåñ
        document.getElementById('trade-price')?.addEventListener('input', updateTradeAmount);
        document.getElementById('trade-volume')?.addEventListener('input', updateTradeAmount);

        async function executeQuickTrade(buttonDirection) {
            if (!currentDetailCode) {
                showToast('ËØ∑ÂÖàÈÄâÊã© ETF', 'warning');
                return;
            }

            const direction = buttonDirection || document.getElementById('trade-direction').value;
            const price = parseFloat(document.getElementById('trade-price').value);
            const volume = parseInt(document.getElementById('trade-volume').value);

            if (!price || price <= 0) {
                showToast('ËØ∑ËæìÂÖ•ÊúâÊïà‰ª∑Ê†º', 'warning');
                return;
            }

            if (!volume || volume <= 0 || volume % 100 !== 0) {
                showToast('Êï∞ÈáèÂøÖÈ°ªÊòØ100ÁöÑÊï¥Êï∞ÂÄç', 'warning');
                return;
            }

            // Á°ÆËÆ§‰∏ãÂçï
            const confirmMsg = `Á°ÆËÆ§${direction === 'BUY' ? '‰π∞ÂÖ•' : 'ÂçñÂá∫'} ${currentDetailCode}\n‰ª∑Ê†º: ¬•${price.toFixed(3)}\nÊï∞Èáè: ${volume}ËÇ°\nÈáëÈ¢ù: ¬•${(price * volume).toFixed(2)}`;
            if (!confirm(confirmMsg)) {
                return;
            }

            try {
                const response = await fetch('/api/trade', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        code: currentDetailCode,
                        direction: direction,
                        price: price,
                        volume: volume
                    })
                });

                const result = await response.json();

                if (result.success) {
                    showToast(`${direction === 'BUY' ? '‰π∞ÂÖ•' : 'ÂçñÂá∫'}ÂßîÊâòÊàêÂäüÔºÅËÆ¢ÂçïÂè∑: ${result.order_id || '--'}`, 'success', 5000);
                    closeDetailModal();
                    refreshData();
                } else {
                    showToast(`‰∏ãÂçïÂ§±Ë¥•: ${result.message}`, 'error', 5000);
                }
            } catch (error) {
                console.error('Trade error:', error);
                showToast('ÁΩëÁªúÈîôËØØÔºåËØ∑Á®çÂêéÈáçËØï', 'error');
            }
        }

        function closeModal() {
            document.getElementById('chart-modal').classList.remove('show');
        }

        // Global refresh function
        async function refreshData() {
            const activeTab = document.querySelector('.tab-content.active').id;

            switch (activeTab) {
                case 'dashboard':
                    await loadDashboard();
                    break;
                case 'monitor':
                    await loadETFMonitor();
                    break;
                case 'signals':
                    await loadSignals();
                    break;
                case 'history':
                    await loadTrades();
                    break;
                case 'settings':
                    await loadSettings();
                    break;
            }
        }

        // Auto refresh
        setInterval(refreshData, 30000); // Refresh every 30 seconds

        // Initial load
        loadDashboard();

        // Handle window resize for charts
        window.addEventListener('resize', () => {
            if (chartInstance) {
                chartInstance.resize();
            }
        });
    </script>
