        }

        .monitor-header {
            margin-bottom: 1.5rem;
        }

        .monitor-actions {
            display: flex;
            gap: 0.75rem;
            margin-left: auto;
        }

        .etf-stats {
            display: flex;
            gap: 2rem;
            padding: 1rem 0;
            border-bottom: 1px solid var(--border);
            margin-bottom: 1.5rem;
        }

        .stat-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .stat-label {
            font-size: 0.875rem;
            color: var(--text-sub);
        }

        .stat-value {
            font-weight: 600;
            color: var(--text-main);
        }

        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .content-actions {
            display: flex;
            gap: 0.75rem;
        }

        .etf-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .etf-name {
            font-weight: bold;
            font-size: 1.125rem;
        }

        .etf-code {
            color: var(--text-sub);
            font-size: 0.875rem;
        }

        .etf-price {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .etf-metrics {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
            margin: 1rem 0;
        }

        .metric-item {
            display: flex;
            justify-content: space-between;
            font-size: 0.875rem;
        }

        .metric-label {
            color: var(--text-sub);
        }

        .metric-value-small {
            font-weight: 600;
        }

        /* Trading Signals Styles */
        .signals-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
        }

        .signals-section {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 1.5rem;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            font-size: 1.125rem;
            font-weight: bold;
        }

        .signal-item {
            background: var(--bg-dark);
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 0.75rem;
            display: flex;
            justify-content: between;
            align-items: center;
            gap: 1rem;
            transition: all 0.2s;
        }

        .signal-item:hover {
            border-color: var(--primary);
        }

        .signal-info {
            flex: 1;
        }

        .signal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .signal-time {
            color: var(--text-sub);
            font-size: 0.75rem;
        }

        .signal-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: bold;
        }

        .badge-buy {
            background: rgba(16, 185, 129, 0.2);
            color: var(--success);
        }

        .badge-sell {
            background: rgba(239, 68, 68, 0.2);
            color: var(--danger);
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.8);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal.show {
            display: flex;
        }

        .modal-content {
            background: var(--bg-card);
            width: 90%;
            height: 80%;
            border-radius: 12px;
            position: relative;
            display: flex;
            flex-direction: column;
        }

        .modal-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-body {
            flex: 1;
            padding: 1.5rem;
            overflow: auto;
        }

        .close-btn {
            background: none;
            border: none;
            color: var(--text-sub);
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.25rem;
        }

        .close-btn:hover {
            color: var(--text-main);
        }

        /* Button Styles */
        .btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--primary-light);
        }

        .btn-secondary {
            background: var(--bg-hover);
            color: var(--text-main);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .metrics-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .status-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                gap: 1rem;
                padding: 1rem;
            }

            .container {
                padding: 1rem;
            }

            .dashboard-grid,
            .etf-grid {
                grid-template-columns: 1fr;
            }

            .signals-container {
                grid-template-columns: 1fr;
            }

            .metrics-grid {
                grid-template-columns: 1fr;
            }

            .etf-stats {
                flex-direction: column;
                gap: 1rem;
            }

            .content-header,
            .monitor-actions,
