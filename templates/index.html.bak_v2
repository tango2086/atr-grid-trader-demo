            border: none;
        }

        .metric-card.warning {
            background: linear-gradient(135deg, var(--warning), #fbbf24);
            border: none;
        }

        .metric-card.info {
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
            border: none;
        }

        .metric-card.primary .metric-title,
